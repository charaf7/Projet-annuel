<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="calibration.CC_Controller">
	<top>
		<VBox>
   <children>
   			<HBox alignment="CENTER" spacing="10">
   				<padding>
   					<Insets bottom="10" top="10" />
   				</padding>
      <children>
      				<Label text="Boards #" />
      				<TextField fx:id="numBoards" maxWidth="50" text="20" />
      				<Label text="Horizontal corners #" />
      				<TextField fx:id="numHorCorners" maxWidth="50" text="9" />
      				<Label text="Vertical corners #" />
      				<TextField fx:id="numVertCorners" maxWidth="50" text="6" />
      				<Button fx:id="applyButton" alignment="center" onAction="#updateSettings" text="Apply" />
      </children>
   			</HBox>
   			<Separator />
   </children>
		</VBox>
	</top>
	<left>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
   <children>
   			<ImageView fx:id="originalFrame" />
   </children>
		</VBox>
	</left>
	<right>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
   <children>
   			<ImageView fx:id="calibratedFrame" />
   </children>
		</VBox>
	</right>
	<bottom>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
   <children>
   			<Button fx:id="cameraButton" alignment="center" disable="true" onAction="#startCamera" text="Start camera" />
   			<Button fx:id="snapshotButton" alignment="center" disable="true" onAction="#takeSnapshot" text="Take snapshot" />
   </children>
		</HBox>
	</bottom>
</BorderPane>
